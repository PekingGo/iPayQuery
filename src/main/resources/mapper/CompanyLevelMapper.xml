<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.microfin.logic.dao.CompanyLevelDao">
    <select id="query" resultType="com.microfin.logic.entity.CompanyLevel">
        SELECT 
            id,orgName,orgNo,`level`
        FROM 
            T_COMPANY_LEVEL
        WHERE 
         1=1
        <if test="_parameter !=null and _parameter != ''">
         AND 
             id = #{id,jdbcType=VARCHAR}
        </if>
    </select>
    <select id="queryByCategory" resultType="com.microfin.logic.entity.CompanyLevel">
        SELECT
          id,orgName,orgNo,`level`
        FROM
          T_COMPANY_LEVEL
        WHERE
          1=1
        <if test="_parameter !=null and _parameter != ''">
            AND
              orgName LIKE "%"#{orgName,jdbcType=VARCHAR}"%"
        </if>
    </select>
</mapper>