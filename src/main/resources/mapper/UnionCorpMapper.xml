<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.microfin.logic.dao.UnionCorpDao">
    <select id="query" resultType="com.microfin.logic.entity.UnionCorp">
        SELECT
          id,corp_name,funds,legal,address,contacts_person,contacts,service_type,service_range,reg_date,site
        FROM
          T_UNION_CORP
        <where>
            <if test="_parameter !=null and _parameter != '' ">
                AND
                id = #{id,jdbcType=VARCHAR}
            </if>
        </where>
    </select>
</mapper>